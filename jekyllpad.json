{
  "site": {
    "type": "astro",
    "basePath": "/"
  },
  "collections": [
    {
      "id": "blog",
      "label": "Blog",
      "path": "src/content",
      "pattern": "*.md",
      "format": "markdown",
      "frontMatter": {
        "title": "title",
        "description": "description",
        "date": "date",
        "updatedDate": "updatedDate",
        "tags": "tags",
        "image": "image",
        "layout": "layout"
      }
    }
  ],
  "media": {
    "path": "public/images"
  },
  "settings": {
    "defaultAuthor": "denizomer1",
    "dateFormat": "YYYY-MM-DD"
  }
}
