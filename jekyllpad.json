{
  "site": {
    "type": "astro",
    "basePath": "/"
  },
  "collections": [
    {
      "id": "blog",
      "label": "Blog",
      "path": "src/content",
      "pattern": "**/*.md",
      "format": "markdown",
  "visible": true,
      "frontMatter": {
        "title": "title",
        "description": "description",
        "date": "date",
        "updatedDate": "updatedDate",
        "tags": "tags",
        "image": "image",
        "layout": "layout"
      }
    }
    ,
    {
      "id": "posts",
      "label": "Posts",
      "path": "src/content",
      "pattern": "**/*.md",
      "format": "markdown",
      "visible": true,
      "frontMatter": {
        "title": "title",
        "description": "description",
        "date": "date",
        "tags": "tags",
        "image": "image",
        "layout": "layout"
      }
    }
    ,
    {
      "id": "pages",
      "label": "Pages",
      "path": "src/pages",
  "pattern": "**/*.{md,mdx,markdown}",
      "format": "markdown",
  "visible": true,
      "frontMatter": {
        "title": "title",
        "description": "description",
        "date": "date",
        "tags": "tags",
        "layout": "layout"
      }
    }
  ],
  "media": {
    "paths": [
      "public/images",
  "public",
  "public/fonts"
    ],
    "extensions": ["png","jpg","jpeg","webp","gif","svg","avif","mp4","webm"],
    "recursive": true
  },
  "ignore": [
    "node_modules",
    "dist",
    ".git",
    "public/.DS_Store"
  ],
  "settings": {
    "defaultAuthor": "denizomer1",
    "dateFormat": "YYYY-MM-DD"
  }
}
