---
// AdSense Advertisement Component for Astro
interface Props {
  slot?: string;
  format?: string;
  responsive?: boolean;
  style?: string;
  class?: string;
}

const { 
  slot = "1234567890", 
  format = "auto", 
  responsive = true, 
  style = "display:block", 
  class: className = "adsbygoogle" 
} = Astro.props as Props;
---

<!-- AdSense Ad Unit -->
<ins 
  class={className}
  style={style}
  data-ad-client="ca-pub-8927381570299660"
  data-ad-slot={slot}
  data-ad-format={format}
  data-full-width-responsive={responsive.toString()}>
</ins>
<script is:inline>
  (adsbygoogle = window.adsbygoogle || []).push({});
</script>

<style>
  .adsbygoogle {
    margin: 1rem 0;
    min-height: 280px;
  }
  
  /* Responsive ad styling */
  @media (max-width: 768px) {
    .adsbygoogle {
      margin: 0.5rem 0;
    }
  }
</style>
