---
// Props typing for clarity (Astro allows TS in the frontmatter)
interface Props {
  link: string;
  platform: string; // keep flexible; falls back if unknown
}
const { link, platform } = Astro.props as Props;

// Minimal icon map; extend here if new platforms are added.
const ICONS = {
  yt: '/yt.png',
  nxt: '/nxt.svg'
} as const;
---

<a class="social-link" href={link} aria-label={platform} rel="noopener noreferrer" target="_blank">
  <img
    src={ICONS[platform as keyof typeof ICONS] ?? '/favicon-alt.svg'}
    alt={platform}
    class="social-icon"
    loading="lazy"
    decoding="async"
  />
</a>

<style>
  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.25rem;
    text-decoration: none;
  }
  .social-icon {
    height: 1.5rem;
    width: auto;
    display: block;
    filter: none;
  }
</style>