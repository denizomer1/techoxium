---
const { link, platform } = Astro.props;

// Default icon map using files present in `public/`.
const ICONS = {
  yt: '/yt.png',
  nxt: '/nxt.svg',
};

const firstSrc = ICONS[platform] ?? '/favicon.svg';

---

<a class="social-link" href={link} aria-label={platform}>
  <img src={firstSrc} alt={platform} class="social-icon" />
</a>

<style>
  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.25rem;
    text-decoration: none;
  }
  .social-icon {
    height: 1.5rem;
    width: auto;
    display: block;
    filter: none;
  }
</style>