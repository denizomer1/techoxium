<script type="module">
const root = document.querySelector('.search-root');
const input = root?.querySelector('.search-input');
const clearBtn = root?.querySelector('.clear-btn');
let results;
let posts = [];
let timer = null;

// Create results container and append to body
if (root) {
  results = document.createElement('div');
  results.className = 'results';
  results.setAttribute('role', 'listbox');
  results.setAttribute('aria-label', 'Search results');
  results.hidden = true;
  document.body.appendChild(results);
}

const turkishMonths = {
  1: 'ocak', 2: 'ÅŸubat', 3: 'mart', 4: 'nisan', 
  5: 'mayÄ±s', 6: 'haziran', 7: 'temmuz', 8: 'aÄŸustos',
  9: 'eylÃ¼l', 10: 'ekim', 11: 'kasÄ±m', 12: 'aralÄ±k'
};

async function loadPosts() { 
  if (posts.length) return; 
  try { 
    const res = await fetch('/api/posts.json'); 
    posts = await res.json(); 
  } catch (error) { 
    console.error('Error loading posts:', error);
    posts = []; 
  } 
}

function dateFmt(d) { 
  try { 
    const date = new Date(d);
    const day = date.getDate();
    const month = turkishMonths[date.getMonth() + 1];
    const year = date.getFullYear();
    return `${day} ${month} ${year}`;
  } catch { 
    return d; 
  } 
}

function tpl(p) { 
  return `<a class="result-item" href="/${p.slug}/">
    ${p.heroImage ? `<img src="${p.heroImage}" alt="" loading="lazy"/>` : ''}
    <div class="meta">
      <div class="title">${p.title}</div>
      <div class="date">${dateFmt(p.pubDate)}</div>
    </div>
  </a>`; 
}

function search(q) { 
  if (!q) return []; 
  const qq = q.trim().toLowerCase(); 
  return posts.filter(p => 
    (p.title || '').toLowerCase().includes(qq) || 
    (p.description || '').toLowerCase().includes(qq)
  ).slice(0, 5); 
}

function render(list) { 
  if (!results) return; 
  if (!list.length) { 
    results.hidden = true; 
    results.innerHTML = ''; 
    return; 
  } 
  
  // Position the results relative to the search bar
  const searchRect = root.getBoundingClientRect();
  results.style.top = `${searchRect.bottom + 12}px`;
  results.style.left = `${searchRect.left}px`;
  results.style.width = `${Math.max(320, searchRect.width)}px`;
  
  results.hidden = false; 
  results.innerHTML = list.map(tpl).join(''); 
  console.log('Search results rendered:', list.length, 'items');
  console.log('Results element hidden:', results.hidden);
  console.log('Results element style:', window.getComputedStyle(results).display);
}

function clear() { 
  if (!input || !clearBtn) return; 
  input.value = ''; 
  clearBtn.hidden = true; 
  render([]); 
}

input?.addEventListener('input', () => { 
  if (!input) return; 
  if (timer) clearTimeout(timer); 
  clearBtn && (clearBtn.hidden = input.value.length === 0); 
  console.log('Search input value:', input.value);
  timer = window.setTimeout(() => { 
    const searchResults = search(input.value);
    console.log('Input search results:', searchResults);
    render(searchResults); 
  }, 200); 
});

input?.addEventListener('focus', () => { 
  console.log('Search input focused');
  loadPosts(); 
  if (input.value) {
    const searchResults = search(input.value);
    console.log('Focus search results:', searchResults);
    render(searchResults);
  }
});

clearBtn?.addEventListener('click', () => { 
  clear(); 
  input?.focus(); 
});

document.addEventListener('keydown', (e) => { 
  if (e.key === '/' && document.activeElement !== input) { 
    input?.focus(); 
    e.preventDefault(); 
  } 
});

document.addEventListener('click', e => { 
  if (!root?.contains(e.target)) { 
    render([]); 
  } 
});

// Update results position on window resize
window.addEventListener('resize', () => {
  if (!results.hidden && root && results) {
    const searchRect = root.getBoundingClientRect();
    results.style.top = `${searchRect.bottom + 12}px`;
    results.style.left = `${searchRect.left}px`;
    results.style.width = `${Math.max(320, searchRect.width)}px`;
  }
});
</script>
