    0 2px 8px rgba(var(--accent-rgb, 2, 6, 23), 0.15);
  transform: translateY(-1px);
}

.search-root:focus-within .search-bar::before {
  left: 100%;
}

.search-input { 
  font: inherit; 
  font-size: 15px;
  border: 0; 
