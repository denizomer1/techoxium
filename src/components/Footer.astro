---
const today = new Date();
import Social from './Social.astro';
---
<footer>
	&copy; {today.getFullYear()} Techoxium. Tüm Hakları Saklıdır.
	<div class="social-links">
		<Social platform="yt" link="https://www.youtube.com/@TechOxium" />
		<Social platform="nxt" link="https://sosyal.teknofest.app/@techoxium" />
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
	}
	.social-links a:hover {
		color: rgb(var(--gray-dark));
	}
</style>

<script>
	if (typeof window !== 'undefined') {
		window.addEventListener('DOMContentLoaded', () => {
			document.documentElement.classList.add('site-loaded');
			const staggerEls = Array.from(document.querySelectorAll('.stagger'));
			staggerEls.forEach((el, i) => el.setAttribute('data-index', String(i)));

			// keyboard activation for focusable cards (Enter/Space)
			const cards = Array.from(document.querySelectorAll('.card[role="link"]'));
			cards.forEach(card => {
				card.addEventListener('keydown', (e) => {
					if (e.key === 'Enter' || e.key === ' ') {
						e.preventDefault();
						const href = card.getAttribute('data-href');
						if (href) window.location.href = href;
					}
				});
			});
		});
	}
</script>
