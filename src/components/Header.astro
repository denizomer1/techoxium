---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/blog"><img src="/logo.png" alt="Logo" class="site-logo" /></a></h2>
		<div class="internal-links">
			<HeaderLink href="/blog">Yazılar</HeaderLink>
			<HeaderLink href="/about">Hakkımızda</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	.site-logo {
		height: 2.25rem;
		width: auto;
		display: block;
		vertical-align: middle;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
