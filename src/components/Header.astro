---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/blog"><svg width="300" height="100" viewBox="0 0 300 100" xmlns="http://www.w3.org/2000/svg">
  <circle cx="50" cy="50" r="30" stroke="#0A2A4A" stroke-width="4" fill="none"/>
  <line x1="30" y1="40" x2="60" y2="40" stroke="#0A2A4A" stroke-width="4"/>
  <circle cx="60" cy="40" r="4" fill="#0A2A4A"/>
  <line x1="30" y1="50" x2="60" y2="50" stroke="#0A2A4A" stroke-width="4"/>
  <circle cx="60" cy="50" r="4" fill="#0A2A4A"/>
  <line x1="30" y1="60" x2="60" y2="60" stroke="#0A2A4A" stroke-width="4"/>
  <circle cx="60" cy="60" r="4" fill="#0A2A4A"/>
  <text x="100" y="45" font-family="Arial, sans-serif" font-size="24" fill="#0A2A4A">Tech</text>
  <text x="160" y="55" font-family="Arial, sans-serif" font-size="24" fill="#00AEEF">Oxium</text>
  <text x="100" y="80" font-family="Arial, sans-serif" font-size="14" fill="#0A2A4A">TECH BLOG</text>
</svg></a></h2>
		<div class="internal-links">
			<HeaderLink href="/blog">Yazılar</HeaderLink>
			<HeaderLink href="/about">Hakkımızda</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
