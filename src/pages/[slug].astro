import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../layouts/BlogPost.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({ params: { slug: post.slug ?? post.id }, props: post }));
}

type BlogEntry = CollectionEntry<'blog'>;
const post = Astro.props as BlogEntry | undefined;
let Content: any;
if (post) {
  const rendered = await render(post);
  Content = rendered.Content;
} else {
  console.warn('[slug].astro: post undefined during build');
}
---
---
---

<BlogPost {...post.data} postSlug={post.slug ?? post.id}>
  <Content />
</BlogPost>
