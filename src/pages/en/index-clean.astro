---
import BaseHead from '../../components/BaseHead.astro';
import { getCollection } from 'astro:content';

const locale = 'en';
const posts = await getCollection('blogEn');
---

<html lang={locale}>
<head>
  <BaseHead title="Techoxium EN" description="English Blog" locale={locale} />
</head>
<body>
  <main>
    <h1>English Blog</h1>
    <p>Posts found: {posts.length}</p>
    <ul>
      {posts.slice(0, 3).map((post: any) => (
        <li>{post.data.title}</li>
      ))}
    </ul>
  </main>
</body>
</html>

<style>
  main {
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }
  h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #333;
  }
  ul {
    list-style: none;
    padding: 0;
  }
  li {
    padding: 0.5rem 0;
    border-bottom: 1px solid #eee;
  }
</style>
